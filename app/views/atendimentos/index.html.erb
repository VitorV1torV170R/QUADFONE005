<% content_for :title, "Atendimentos" %>

<h1>Atendimentos</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>descricao</th>
      <th>status</th>
      <th>Paciente</th>
      <th>Profissional</th>
      <th>Vocabul√°rio</th>
    </tr>
  </thead>
  <tbody>
    <% @atendimentos.each do |atendimento| %>
      <tr>
        <td><%= atendimento.data.strftime("%d/%m/%Y") %></td>
        <td><%= atendimento.descricao %></td>
        <td><%= atendimento.status %></td>
        <td><%= atendimento.paciente_id %></td>
        <td><%= atendimento.profissional_id %></td>
        <td><%= atendimento.vocabulario_id %></td>
        <td>
          <%= link_to "Ver Palavras", atendimentopalavras_path(atendimento_id: atendimento.id), class: "btn btn-info" %>
          <%= link_to "Mostrar", atendimento_path(atendimento), class: "btn btn-primary" %>
          <%= link_to "Editar", edit_atendimento_path(atendimento), class: "btn btn-secondary" %>
          <%= link_to "Deletar", atendimento_path(atendimento), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

